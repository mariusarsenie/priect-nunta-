<script>
  const widget = uploadcare.Widget(document.getElementById('uploader'));
  const uploadBtn = document.getElementById('uploadButton');
  const gallery = document.getElementById('gallery');
  const noImages = document.getElementById('noImages');

  // Lista pozelor Ã®ncÄƒrcate (deocamdatÄƒ goalÄƒ)
  const imageLinks = [];

  function renderGallery() {
    gallery.innerHTML = '';
    if (imageLinks.length === 0) {
      noImages.style.display = 'block';
    } else {
      noImages.style.display = 'none';
      imageLinks.forEach(url => {
        const img = document.createElement('img');
        img.src = url + '-/preview/500x500/';
        img.alt = 'Selfie nuntÄƒ';
        gallery.appendChild(img);
      });
    }
  }

  renderGallery();

  uploadBtn.addEventListener('click', () => {
    widget.openDialog(null, { multiple: true }).done(files => {
      files.forEach(file => {
        const img = document.createElement('img');
        img.src = file.cdnUrl + '-/preview/500x500/';
        img.alt = 'Selfie Ã®ncÄƒrcat';
        gallery.appendChild(img);
        noImages.style.display = 'none';
      });
    });
  });
</script>

